RewriteEngine On
RewriteBase /

Redirect 302 /blog/posts.xml http://blog.alwaysreadthemanual.com/posts.xml
Redirect 302 /blog/synopses.xml http://blog.alwaysreadthemanual.com/synopses.xml

RewriteRule ^issues/4/wilson-miner/article$ index.php [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^.*$ http://buy.alwaysreadthemanual.com/ [R=302]

# DEFLATE compression
<IfModule mod_deflate.c>

# Set compression for: html,txt,xml,js,css
AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/xhtml+xml text/javascript text/css application/x-javascript

# Deactivate compression for buggy browsers
BrowserMatch ^Mozilla/4 gzip-only-text/html
BrowserMatch ^Mozilla/4.0[678] no-gzip
BrowserMatch bMSIE !no-gzip !gzip-only-text/html

# Set header information for proxies
Header append Vary User-Agent
</IfModule>
# END DEFLATE